<center><h1>Categoria</h1></center>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Id Categoria</th>
      <th>Nombre Categoria</th>
      <th>Descripcion</th>
      <th>Producto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categoria.each do |categorium| %>
      <tr>
        <td><%= categorium.Idcategoria %></td>
        <td><%= categorium.nombrecategoria %></td>
        <td><%= categorium.descripcion %></td>
        <td><%= categorium.producto.Idproducto %></td>
        <td><%= link_to 'Ver', categorium %></td>
        <td><%= link_to 'Editar', edit_categorium_path(categorium) %></td>
        <td><%= link_to 'Eliminar', categorium, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Categoria', new_categorium_path %>
